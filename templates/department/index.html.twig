{% extends 'base.html.twig' %}

{% block title %}Les chiffres du COVID-19 en France{% endblock %}

{% block body %}



<div class="album py-4">
    <div class="container">
        <h1 class="mb-5 text-center ">Les chiffres du COVID par département</h1>

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {% for department in departments.allLiveFranceData %}
                <div class="col">
                    <div class="card shadow-lg h-100 m-1 border border-dark">
                        <div class="card-body">
                            <h5 class="card-tittle">{{ department.code | replace({'DEP-':''})  }} - {{ department.nom }} </h5>
                            <p class="card-text">Actuellement hospitalisés : <span class="badge bg-warning">{{ department.hospitalises }}</span></p>
                            <p class="card-text">Actuellement en réa : <span class="badge bg-danger">{{ department.reanimation }}</span></p>
                            <div class="text-center">
                            <a href="{{ path('department_show', {'department' : department.nom })}}" class="btn btn-secondary " role="button" aria-pressed="true">Plus de chiffres</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}
